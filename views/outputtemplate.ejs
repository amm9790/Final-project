<body>
<h1>The Collages</h1>

<% if (data.length > 0 ){
    for (var i = 0; i < data.length; i++){
   %>
   <div id="dataout<%= i %>" style="color: <%= data[i].color %>; font-size: <%= data[i].size %>px"><marquee direction='down' width='100%' height='100%' behavior='alternate' style='border:0; position: absolute;'><marquee behavior='alternate'><img src="/uploads/<%= data[i].file.filename %>"></marquee>
   </marquee></div>

   <div id="dataout<%= i %>" style="color: <%= data[i].color %>; font-size: <%= data[i].size %>px"><marquee behavior='alternate' scrollamount='20'><a href="/displayrecord?_id=<%= data[i]._id %>"  style="color: <%= data[i].color %>;font-size: <%= data[i].number %>px"><%= data[i].text %></a> 
   </marquee></div>
   
   <%
   }
   } 
   %>

</body>


</html>
